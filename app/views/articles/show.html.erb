<div class="container text-center">
  <div class="title">
    <h1> <%= @article.title %></h1>
    <%= link_to articles_path do %>
      <i class="fas fa-pen"></i>
    <% end %> -
    <%= link_to "Edit", edit_article_path %> - <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?"} %>
  </div>
  <p> <%= @article.content %> </p>
</div>
