<div class="container text-center">

<h1>All articles</h1>

<ul>
  <% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article) %> - <%= article.content %>
  </li>
  <% end %>
</ul>

  <%= link_to "Create a new article", articles_new_path, class: "btn btn-outline-success btn-lg mt-2" %>
</div>

